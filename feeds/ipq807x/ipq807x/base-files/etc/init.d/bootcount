#!/bin/sh /etc/rc.common

START=99

boot() {
	case "$(board_name)" in
	hfcl,ion4xe|\
	hfcl,ion4x|\
	hfcl,ion4x_2|\
	hfcl,ion4xi_w|\
	hfcl,ion4x_w|\
	hfcl,ion4xi_HMR|\
	hfcl,ion4xi_wp|\
	hfcl,ion4xi)
		fw_setenv boot_count 0
		;;		
	edgecore,eap101|\
	edgecore,eap102|\
	edgecore,eap104|\
	edgecore,oap102)
		avail=$(fw_printenv -n upgrade_available)
		[ "${avail}" -eq 1 ] || fw_setenv upgrade_available 1
		fw_setenv bootcount 0
		;;
	esac
}
